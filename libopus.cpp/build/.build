#!/bin/bash
CMAKE_REQUIRED_VER="3.2"
CLEAN=0
TYPE="release"
VBOSE=0
JOPT=`nproc`
INSTALL=""
TARGETS=""
SUBSYS_ARG="--no-fp"
JUST_CMAKE=0
HDR_SLEEP=1

# compare software versions
# Dennis Williamson's version [http://stackoverflow.com/a/4025065]
vercomp () {
    if [[ $1 == $2 ]]
    then
        return 0
    fi
    local IFS=.
    local i ver1=($1) ver2=($2)
    # fill empty fields in ver1 with zeros
    for ((i=${#ver1[@]}; i<${#ver2[@]}; i++))
    do
        ver1[i]=0
    done
    for ((i=0; i<${#ver1[@]}; i++))
    do
        if [[ -z ${ver2[i]} ]]
        then
            # fill empty fields in ver2 with zeros
            ver2[i]=0
        fi
        if ((10#${ver1[i]} > 10#${ver2[i]}))
        then
            return 1
        fi
        if ((10#${ver1[i]} < 10#${ver2[i]}))
        then
            return 2
        fi
    done
    return 0
}

